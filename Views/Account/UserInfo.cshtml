@model MvcApplication1.Models.UserInfo
<script src="~/Scripts/jquery.raty.js"></script>
<h4 class="form-heading">Personal Info</h4>
<table  class="table table-hover">
    <thead>
        <tr>
            <th>
                #
            </th>
            <th>
                Name
            </th>
            <th>
                Username
            </th>
            <th>
                Cell No
            </th>
            <th>
                Address
            </th>
        </tr>

    </thead>
    <tbody>
        <tr>
            <td>
                1
            </td>
            <td>
                @Model.Name
            </td>
            <td>
                @Model.username
            </td>
            <td>
                @Model.cellNo
            </td>
            <td>
                @Model.Address
            </td>
        </tr>

    </tbody>

</table>
<br />
<h4 class="form-heading">Images / Ratings</h4>
<table  class="table table-hover">
    <thead>
        <tr>
            <th>
                #
            </th>
            <th>
                Images
            </th>
            <th>
                Ratings
            </th>
        </tr>

    </thead>
    <tbody>
     @{for (int i = 1; i <= Model.hisImages.Count ; i++ )
        {
            string imageId = (Model.hisImages[i-1].Split('/')[Model.hisImages[i-1].Split('/').Length - 1]).Split('.')[0];
            double rating = Convert.ToDouble(Model.Ratings[i-1].Split('/')[0]);
        <tr>
            <td>
               @i
            </td>
            <td>
                <img style="height:100px;width:100px" src="@Model.hisImages[i-1]" />
            </td>
            <td>
                <div id="@imageId" style="padding: 15px 10px;"> 
                    <div>@Model.Ratings[i-1]/5</div>
                </div>
                <script>
                    $('#@imageId').raty({
                        score: Number(@rating),
                        readOnly: true
                    });
                </script>
            </td>
        </tr>
        }
    }
    </tbody>

</table>
<br />
<h4 class="form-heading">Images Shippment</h4>
<table  class="table table-hover">
    <thead>
        <tr>
            <th>
                #
            </th>
            <th>
                Images
            </th>
            <th>
                Status
            </th>
        </tr>

    </thead>
    <tbody>
     @{for (int i = 1; i <= Model.PendingOrderImages.Count ; i++ )
        {
            string imageId = (Model.PendingOrderImages[i - 1].Split('/')[Model.PendingOrderImages[i - 1].Split('/').Length - 1]).Split('.')[0];
        <tr>
            <td>
               @i
            </td>
            <td>
                <img style="height:100px;width:100px" src="@Model.PendingOrderImages[i-1]" />
            </td>
            <td>
                Pending
            </td>
        </tr>
        }
    }
    @{for (int i = 1; i <= Model.ShippedOrderImages.Count ; i++ )
        {
            string imageId = (Model.ShippedOrderImages[i - 1].Split('/')[Model.ShippedOrderImages[i - 1].Split('/').Length - 1]).Split('.')[0];
        <tr>
            <td>
               @i
            </td>
            <td>
                <img style="height:100px;width:100px" src="@Model.ShippedOrderImages[i-1]" />
            </td>
            <td>
                Shipped
            </td>
        </tr>
        }
    }
    </tbody>

</table>
